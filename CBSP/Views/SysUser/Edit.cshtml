
@model CBSP.DAL.Sys_User
using CBSP.DAL


@{
    Layout = "~/Views/Shared/MainPage.cshtml";
    ViewBag.Title = "用户管理";
}

<div class="widget flat radius-bordered">
    <div class="widget-header bordered-bottom bordered-sky">
        <i class="widget-icon fa fa-calendar sky"></i><span class="widget-caption">@ViewBag.Title</span>
    </div>
    <div class="widget-body">
        <div class="widget-main">
            
            @using (Html.BeginForm("SaveSysUser", "SysUser", FormMethod.Post, new { role = "form" }))
            {

                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "input-group-addon" })
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(m => m.sex, new { @class = "input-group-addon" })
                                @Html.DropDownListFor(m => m.sex, ViewData["sexList"] as SelectList, new { @class = "form-control", style = "width:100%" })
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.LabelFor(model => model.education, htmlAttributes: new { @class = "input-group-addon" })
                                @Html.DropDownListFor(m => m.education, ViewData["educationList"] as SelectList, new { @class = "form-control", style = "width:100%" })
                               
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="input-group">

                                @Html.LabelFor(m => m.major, new { @class = "input-group-addon" })

                                @Html.EditorFor(model => model.major, new { htmlAttributes = new { @class = "form-control", style = "width:100%" } })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.Label("角色", new { @class = "input-group-addon" })
                                @Html.ListBoxFor(m => m.roleId, ViewData["roleList"] as MultiSelectList, new { @class = "form-control amenities-select" })
                                @Html.ValidationMessageFor(model => model.roleId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="input-group">
                                @Html.Label("职务", new { @class = "input-group-addon" })
                                @Html.ListBoxFor(m => m.dutyId, ViewData["dutyList"] as MultiSelectList, new { @class = "form-control amenities-select" })
                                @Html.ValidationMessageFor(model => model.dutyId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                
                   <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                    <input type = "submit" value="保存" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
            }
        </div>

    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
