@model IEnumerable<CBSP.DAL.Sys_Role>

@{
    Layout = "~/Views/Shared/MainPage.cshtml";
    ViewBag.Title = "角色管理";
}
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">@ViewBag.Title</span>
            </div>

            <div class="widget-body">
                <div class="table-toolbar">

                    @Html.ActionLink("新增角色", "Create", "SysRole", routeValues: null, htmlAttributes: new { id = "editabledatatable_new", @class = "btn btn-primary" })
                    <!--
                    <div class="btn-group pull-right">
                        <a class="btn btn-azure dropdown-toggle" data-toggle="dropdown">
                            导出 <i class="fa fa-angle-down"></i>
                        </a>
                    </div>
                    -->
                </div>

                <table class="table table-striped table-bordered table-hover" id="simpledatatable">
                    <thead>
                        <tr>
                            

                            <th>
                                角色名称
                            </th>
                            <th style="width:200px">
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)</td>
                                <td>
                                   
                                    <a href="@Url.Action("Edit",new{id=item.id})" class="btn btn-primary btn-xs edit"><i class="fa fa-edit"></i> 编辑</a>
                                    <a href="@Url.Action("Delete",new{id=item.id})" class="btn btn-danger btn-xs delete"><i class="fa fa-trash-o"></i> 删除</a>

                                
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<!--Page Related Scripts-->
<link href="~/assets/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/assets/js/datatable/jquery.datatables.min.js"></script>
<script src="~/assets/js/datatable/zeroclipboard.js"></script>
<script src="~/assets/js/datatable/datatables.tabletools.min.js"></script>
<script src="~/assets/js/datatable/datatables.bootstrap.min.js"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>


<script>

    //setPageValue("7000,7300");
