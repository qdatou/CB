        return {
            init: function () {
                var oTable = $('#simpledatatable').dataTable({
                    "sDom": "Tflt<'row DTTTFooter'<'col-sm-6'i><'col-sm-6'p>>",
                    "aLengthMenu": [
                       [5, 10, 20, 100, -1],
                       [5, 10, 20, 100, "All"]
                    ],
                    "iDisplayLength": 5,
                    "oTableTools": {
                        "aButtons": [
                        ],
                        "sSwfPath": "assets/swf/copy_csv_xls_pdf.swf"
                    },
                    "language": {
                        "search": "",
                        "sLengthMenu": "_MENU_",
                        "oPaginate": {
                            "sPrevious": "前一页",
                            "sNext": "下一页"
                        }
                    },
                    "aaSorting": []
                });
            }
        };
    }();

    InitiateListDataTable.init();

</script>

